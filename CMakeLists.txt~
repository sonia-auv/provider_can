cmake_minimum_required(VERSION 2.8.3)
project(provider_can)

## Find catkin macros and libraries
## if COMPONENTS list like find_package(catkin REQUIRED COMPONENTS xyz)
## is used, also find other catkin packages
find_package(catkin REQUIRED COMPONENTS
  roscpp
  rospy
  std_msgs
  message_generation
)

#===============================================================================
# I N C L U D E   F I L E S

set( provider_can_SRC_DIR "src" )

# Get all the files of the projects.
file( GLOB_RECURSE provider_dvl_FILES
        "${provider_can_SRC_DIR}/provider_can/*.cpp"
        "${provider_can_SRC_DIR}/provider_can/*.hpp"
        "${provider_can_SRC_DIR}/provider_can/*.cpp"
        "${provider_can_SRC_DIR}/provider_can/*.hpp"
	"${provider_can_SRC_DIR}/provider_can/*.cc"
        "${provider_can_SRC_DIR}/provider_can/*.h"
        "${provider_can_SRC_DIR}/provider_can/*.cc"
        "${provider_can_SRC_DIR}/provider_can/*.h"
)

# Include all the directories where source can be found.
include_directories(
        ${provider_can_SRC_DIR}
        ${catkin_INCLUDE_DIRS}
)

#==========================================================================
# C R E A T E   E X E C U T A B L E

set( TARGET_NAME provider_can_node )

# Creating the ROS Node
add_executable( ${TARGET_NAME}
    src/provider_can/main.cc
    ${provider_can_FILES}
)

target_link_libraries(${TARGET_NAME}
    ${catkin_LIBRARIES}
    )


